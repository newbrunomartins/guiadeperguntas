<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>
        <div class="container">
            <h1 class="mb-5">Lista de Perguntas</h1>
            <a href="/perguntar" class="btn btn-primary">Fazer uma pergunta</a>
            <hr>
            <% perguntas.forEach(pergunta=>{ %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h3>
                            <%= pergunta.titulo %>
                        </h3>
                    </div>
                    <div class="card-footer">
                        <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                    </div>
                </div>
                <% }) %>
        </div>
        <%- include ('partials/footer.ejs') %>