<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>

<div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>    

    <form action="/responder" method="POST">
        <h3>Responda</h3>
        <textarea class="form-control" name="corpo" id="" placeholder="Digite sua resposta"></textarea>
        <input type="hidden" name="pergunta" id="" value="<%= pergunta.id %>">
        <button class="btn btn-dark mt-2" type="submit">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <% respostas.forEach(resposta =>{ %>
        <div class="card mb-3">
            <div class="card-body">
                <p><%= resposta.corpo %></p>
            </div>
        </div>
    <% }) %>
</div>

<%- include ('partials/footer.ejs')%>